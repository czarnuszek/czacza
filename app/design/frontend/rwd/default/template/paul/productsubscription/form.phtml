<?php $_product = $this->getProduct(); ?>

<?php if (($_product->isAvailable()) !== false): ?>
    <?php return; ?>
<?php endif; ?>

<?php if (Mage::getSingleton('customer/session')->isLoggedIn()): ?>
    <?php if ($this->checkIfSubscriptionExists() !== 0): ?>
        <?php echo "Przedmiot jest już zasubskrybowany"; ?>
        <?php return; ?>
    <?php endif; ?>

    <form action="<?php echo $this->getFormUserAction() ?>" method="post" id="newsletter-validate-detail">
        <div class="block-content">
            <div class="form-subscribe-header">
                <label>Poinformuj mnie, gdy produkt będzie dostępny</label>
            </div>
            <div class="actions">
                <button type="submit"
                        class="button"><span><span>Zapisz mnie</span></span></button>
            </div>
        </div>
    </form>

<?php else: ?>

    <?php if ($this->getRequest()->getParam('email') !== NULL): ?>
        <?php $email = $this->getRequest()->getParam('email'); ?>
        <?php echo "Email {$email} subskrybuje już dany produkt"; ?>
        <?php return; ?>
    <?php endif; ?>

    <form action="<?php echo $this->getFormAnonymousAction() ?>" method="post"
          id="newsletter-validate-detail">
        <div class="block-content">
            <div class="form-subscribe-header">
                <label> Poinformuj mnie, gdy produkt będzie dostępny </label>
            </div>
            <div class="input-box">
                <input type="email" name="email" id="productsub"
                       placeholder="Podaj swój adres email"
                       title="email"
